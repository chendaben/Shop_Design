				BookName = #{bookname,jdbcType=VARCHAR},
			</if>
			<if test="bookauthor != null">
				BookAuthor = #{bookauthor,jdbcType=VARCHAR},
			</if>
			<if test="bookpress != null">
				BookPress = #{bookpress,jdbcType=VARCHAR},
			</if>
